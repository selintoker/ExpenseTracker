<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AverageActivity">

    <Button
        android:id="@+id/averageTotalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="AverageMonthExpensesIntent"
        android:text="Get Average and Total"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner6" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="191dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintBottom_toTopOf="@+id/spinner6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="191dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner3"
        app:layout_constraintBottom_toTopOf="@id/averageTotalButton"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="191dp"
        android:layout_height="107dp"
        android:text="Enter the month you want to see the average and total for:"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>